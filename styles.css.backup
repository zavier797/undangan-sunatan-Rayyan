            background: radial-gradient(circle at 30% 30%, #FFF8F0 0%, #F5E6D3 50%, #E8D4BC 100%);
            border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
            box-shadow:
                inset -2px -2px 8px rgba(0, 0, 0, 0.1),
                0 4px 12px rgba(0, 0, 0, 0.15);
            transform: rotate(45deg);
        }

        .css-flower::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 70%;
            height: 70%;
            background: radial-gradient(circle, #FFF 0%, #F5E6D3 100%);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .rose-1 {
            left: 10%;
            animation-duration: 15s;
            animation-delay: 0s;
        }

        .rose-2 {
            left: 50%;
            animation-duration: 18s;
            animation-delay: 3s;
        }

        .rose-3 {
            left: 85%;
            animation-duration: 20s;
            animation-delay: 6s;
        }

        .css-leaf {
            position: absolute;
            width: 40px;
            height: 12px;
            background: linear-gradient(90deg, #7BA885 0%, #A8CAAF 50%, #7BA885 100%);
            border-radius: 50%;
            animation: floatDown linear infinite;
            opacity: 0.8;
        }

        .css-leaf::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 2px;
            height: 100%;
            background: linear-gradient(180deg, #6B9877 0%, #8BAA95 100%);
            transform: translate(-50%, -50%);
        }

        .leaf-1 {
            left: 20%;
            animation-duration: 12s;
            animation-delay: 1s;
        }

        .leaf-2 {
            left: 40%;
            animation-duration: 16s;
            animation-delay: 4s;
        }

        .leaf-3 {
            left: 65%;
            animation-duration: 14s;
            animation-delay: 2s;
        }

        .leaf-4 {
            left: 80%;
            animation-duration: 17s;
            animation-delay: 5s;
        }

        @keyframes floatDown {
            0% {
                top: -10%;
                transform: translateX(0) rotate(0deg);
                opacity: 0;
            }

            10% {
                opacity: 0.8;
            }

            25% {
                transform: translateX(20px) rotate(90deg);
            }

            50% {
                transform: translateX(-15px) rotate(180deg);
            }

            75% {
                transform: translateX(25px) rotate(270deg);
            }

            90% {
                opacity: 0.8;
            }

            100% {
                top: 110%;
                transform: translateX(0) rotate(360deg);
                opacity: 0;
            }
        }

        .corner-decoration {
            position: fixed;
            pointer-events: none;
            z-index: 5;
        }

        .corner-decoration.top-left {
            top: 30px;
            left: 30px;
        }

        .corner-decoration.top-right {
            top: 30px;
            right: 30px;
            transform: scaleX(-1);
        }

        .corner-decoration.bottom-left {
            bottom: 30px;
            left: 30px;
            transform: scaleY(-1);
        }

        .corner-decoration.bottom-right {
            bottom: 30px;
            right: 30px;
            transform: scale(-1);
        }

        .corner-rose {
            width: 80px;
            height: 80px;
            position: relative;
            animation: gentleFloat 6s ease-in-out infinite;
        }

        .corner-rose::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 35% 35%, #FFF 0%, #F5E6D3 40%, #E8D4BC 100%);
            border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
            box-shadow:
                inset -3px -3px 12px rgba(0, 0, 0, 0.15),
                0 6px 20px rgba(0, 0, 0, 0.2);
            transform: rotate(45deg);
        }

        .corner-rose::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 60%;
            height: 60%;
            background: radial-gradient(circle, #FFFBF5 0%, #F0DCC8 100%);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
        }

        .corner-leaves {
            position: absolute;
            top: -20px;
            left: -30px;
            width: 150px;
            height: 150px;
        }

        .corner-leaves::before,
        .corner-leaves::after {
            content: '';
            position: absolute;
            width: 50px;
            height: 15px;
            background: linear-gradient(90deg, #7BA885 0%, #A8CAAF 50%, #7BA885 100%);
            border-radius: 50%;
            opacity: 0.7;
        }

        .corner-leaves::before {
            top: 20px;
            left: 10px;
            transform: rotate(-25deg);
        }

        .corner-leaves::after {
            top: 40px;
            left: 30px;
            transform: rotate(15deg);
        }

        @keyframes gentleFloat {

            0%,
            100% {
                transform: translateY(0) rotate(0deg);
            }

            25% {
                transform: translateY(-5px) rotate(2deg);
            }

            50% {
                transform: translateY(0) rotate(0deg);
            }

            75% {
                transform: translateY(-3px) rotate(-2deg);
            }
        }

        /* SECTION FULL width - MISSING */
        .section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: var(--spacing-xxl) var(--spacing-xl);
            position: relative;
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.8s ease, transform 0.8s ease;
        }

        /* UTILITY */
        .text-center {
            text-align: center;
        }

        .mt-lg {
            margin-top: var(--spacing-lg);
        }

        .mb-lg {
            margin-bottom: var(--spacing-lg);
        }

        .hidden {
            display: none;
        }