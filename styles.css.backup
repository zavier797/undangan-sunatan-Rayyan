@import url('https://fonts.googleapis.com/css2?family=Great+Vibes&family=Allura&family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&family=Lora:ital,wght@0,400;0,600;1,400&family=Montserrat:wght@400;600;700&family=Cinzel+Decorative:wght@400;700;900&display=swap');

:root {
    --bg-primary: #F5F5F5;
    --bg-secondary: #FFFFFF;
    --accent-green-dark: #1B4F39;
    --accent-green-light: #4CAF50;
    --accent-gold: #B8860B;
    --accent-gold-light: #DAA520;
    --text-main: #333333;
    --text-secondary: #666666;
    --font-script: 'Great Vibes', 'Allura', cursive;
    --font-decorative: 'Cinzel Decorative', serif;
    --font-body: 'Merriweather', 'Lora', serif;
    --font-heading: 'Montserrat', sans-serif;
    --spacing-xs: 8px;
    --spacing-sm: 16px;
    --spacing-md: 24px;
    --spacing-lg: 40px;
    --spacing-xl: 60px;
    --spacing-xxl: 80px;
    --shadow-card: 0 4px 15px rgba(0, 0, 0, 0.08);
    --shadow-elevated: 0 8px 25px rgba(0, 0, 0, 0.12);
    --shadow-gold: 0 4px 15px rgba(184, 134, 11, 0.25);
    --border-radius: 12px;
    --border-radius-sm: 8px;
    --transition: all 0.3s ease-in-out;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
    font-size: 16px;
}

body {
    font-family: var(--font-body);
    background-color: var(--bg-primary);
    color: var(--text-main);
    line-height: 1.7;
    overflow-x: hidden;
}

body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
        radial-gradient(circle at 20% 30%, rgba(184, 134, 11, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(27, 79, 57, 0.03) 0%, transparent 50%);
    pointer-events: none;
    z-index: -1;
}

/* LOADING */
#loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--accent-green-dark) 0%, var(--accent-gold) 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    transition: opacity 0.5s ease, visibility 0.5s ease;
}

#loading-overlay.hidden {
    opacity: 0;
    visibility: hidden;
}

.spinner {
    width: 60px;
    height: 60px;
    border: 4px solid rgba(255, 255, 255, 0.3);
    border-top-color: #fff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

.loading-text {
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xxl) var(--spacing-xl);
    position: relative;
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
}

.section.visible {
    opacity: 1;
    transform: translateY(0);
}

.section:nth-child(odd) {
    background: linear-gradient(135deg, #FFFFFF 0%, #FAFAFA 100%);
}

.section:nth-child(even) {
    background: linear-gradient(135deg, #F8FAF8 0%, #F5F5F5 100%);
}

.section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
        radial-gradient(circle at 10% 20%, rgba(184, 134, 11, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 90% 80%, rgba(27, 79, 57, 0.03) 0%, transparent 50%);
    pointer-events: none;
    z-index: 0;
}

.container {
    max-width: 1200px;
    width: 100%;
    padding: 0 var(--spacing-xl);
    position: relative;
    z-index: 1;
}

/* DECORATIONS */
.floral-corner {
    position: absolute;
    width: 120px;
    height: 120px;
    opacity: 0.1;
    pointer-events: none;
    background-image: radial-gradient(circle, var(--accent-gold-light) 2px, transparent 2px);
    background-size: 15px 15px;
}

.floral-tl {
    top: 20px;
    left: 20px;
}

.floral-tr {
    top: 20px;
    right: 20px;
    transform: scaleX(-1);
}

.floral-bl {
    bottom: 20px;
    left: 20px;
    transform: scaleY(-1);
}

.floral-br {
    bottom: 20px;
    right: 20px;
    transform: scale(-1);
}

.eucalyptus-divider {
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent 0%, var(--accent-gold) 50%, transparent 100%);
    margin: var(--spacing-lg) 0;
    position: relative;
}

.eucalyptus-divider::before,
.eucalyptus-divider::after {
    content: '✦';
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color: var(--accent-gold);
    font-size: 12px;
}

.eucalyptus-divider::before {
    left: 45%;
}

.eucalyptus-divider::after {
    right: 45%;
}

/* COVER */
#cover {
    background: linear-gradient(135deg, #FAFAFA 0%, #F5F5F5 100%);
}

.cover-header {
    text-align: center;
    margin-bottom: var(--spacing-lg);
}

.cover-title {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent-green-dark);
    letter-spacing: 8px;
    margin-bottom: var(--spacing-sm);
    text-transform: uppercase;
}

.cover-subtitle {
    font-family: var(--font-body);
    font-size: 1.3rem;
    color: var(--text-main);
    font-weight: 300;
}

.photo-frame {
    width: 65%;
    max-width: 320px;
    margin: var(--spacing-lg) auto;
    position: relative;
}

.photo-frame::before {
    content: '';
    position: absolute;
    top: -12px;
    left: -12px;
    right: -12px;
    bottom: -12px;
    border: 3px double var(--accent-gold);
    border-radius: var(--border-radius);
    pointer-events: none;
    z-index: 2;
}

.photo-frame::after {
    content: '';
    position: absolute;
    top: -6px;
    left: -6px;
    right: -6px;
    bottom: -6px;
    border: 1px solid var(--accent-gold-light);
    border-radius: var(--border-radius);
    pointer-events: none;
    z-index: 2;
}

.photo-frame img {
    width: 100%;
    aspect-ratio: 4/5;
    object-fit: cover;
    border-radius: var(--border-radius-sm);
    box-shadow: var(--shadow-elevated);
    display: block;
}

.main-name {
    font-family: var(--font-script);
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--accent-green-light);
    text-align: center;
    margin: var(--spacing-md) 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    line-height: 1.2;
}

.event-date {
    font-family: var(--font-body);
    font-size: 1.1rem;
    color: var(--text-main);
    text-align: center;
    margin-bottom: var(--spacing-lg);
}

.countdown-container {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    margin: var(--spacing-lg) 0;
    flex-wrap: wrap;
}

.countdown-item {
    background: linear-gradient(135deg, var(--accent-green-dark), var(--accent-green-light));
    color: white;
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--border-radius-sm);
    min-width: 80px;
    text-align: center;
    box-shadow: var(--shadow-card);
}

.countdown-number {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 700;
    display: block;
}

.countdown-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0.9;
}

.btn-primary {
    display: inline-block;
    background: var(--accent-gold);
    color: white;
    padding: 15px 40px;
    border-radius: 50px;
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-decoration: none;
    box-shadow: var(--shadow-gold);
    border: none;
    cursor: pointer;
    transition: var(--transition);
    margin-top: var(--spacing-md);
}

.btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(184, 134, 11, 0.4);
    background: var(--accent-gold-light);
}

.btn-primary i {
    margin-right: 8px;
}

/* PRAYER */
.prayer-text {
    font-family: var(--font-script);
    font-size: 2.5rem;
    color: var(--accent-gold);
    text-align: center;
    margin-bottom: var(--spacing-lg);
}

.prayer-content {
    font-family: var(--font-body);
    font-size: 1.15rem;
    line-height: 1.9;
    color: var(--text-main);
    text-align: center;
    max-width: 800px;
    margin: 0 auto var(--spacing-xl);
    font-style: italic;
}

.ceremony-title {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent-green-dark);
    text-align: center;
    letter-spacing: 8px;
    margin: var(--spacing-xl) 0 var(--spacing-md);
    text-transform: uppercase;
}

.child-name {
    font-family: var(--font-script);
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--accent-green-light);
    text-align: center;
    margin: var(--spacing-md) 0;
    line-height: 1.2;
}

.parents-info {
    font-family: var(--font-body);
    font-size: 0.95rem;
    color: var(--text-secondary);
    text-align: center;
    font-style: italic;
}

/* EVENT DETAILS */
.greeting-text {
    font-family: var(--font-body);
    font-size: 1.15rem;
    font-weight: 600;
    color: var(--accent-green-dark);
    margin-bottom: var(--spacing-md);
    text-align: center;
}

.invitation-text {
    font-family: var(--font-body);
    font-size: 1rem;
    line-height: 1.8;
    color: var(--text-main);
    text-align: center;
    margin-bottom: var(--spacing-xl);
}

.event-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
    margin: var(--spacing-xl) 0;
}

.event-card {
    background: linear-gradient(135deg, #F9FFF9 0%, #FFFFFF 100%);
    border: 1px solid #E0E0E0;
    border-radius: var(--border-radius-sm);
    padding: var(--spacing-lg);
    text-align: center;
    transition: var(--transition);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.event-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-card);
    border-color: var(--accent-gold-light);
}

.event-icon {
    font-size: 2.5rem;
    color: var(--accent-gold);
    margin-bottom: var(--spacing-sm);
}

.event-label {
    font-family: var(--font-heading);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-xs);
}

.event-value {
    font-family: var(--font-body);
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--accent-green-dark);
    line-height: 1.5;
}

.btn-secondary {
    background: var(--accent-green-dark);
    color: white;
    padding: 14px 35px;
    border-radius: 8px;
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 0.95rem;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: var(--transition);
    display: inline-block;
    margin-top: var(--spacing-lg);
    box-shadow: 0 4px 12px rgba(27, 79, 57, 0.3);
}

.btn-secondary:hover {
    background: var(--accent-green-light);
    transform: translateY(-3px);
    box-shadow: 0 6px 18px rgba(27, 79, 57, 0.4);
}

.btn-secondary i {
    margin-right: 8px;
}

/* MAP */
.section-title {
    font-family: var(--font-decorative);
    font-size: 2.2rem;
    color: var(--accent-green-dark);
    text-align: center;
    margin-bottom: var(--spacing-xl);
    letter-spacing: 2px;
}

.map-container {
    width: 100%;
    max-width: 900px;
    height: 400px;
    margin: 0 auto var(--spacing-lg);
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow-elevated);
}

.map-container iframe {
    width: 100%;
    height: 100%;
    border: none;
}

.btn-navigation {
    background: #007BFF;
    color: white;
    padding: 12px 30px;
    border-radius: 8px;
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 0.95rem;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: var(--transition);
    display: inline-block;
    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
}

.btn-navigation:hover {
    background: #0056b3;
    transform: translateY(-3px);
    box-shadow: 0 6px 18px rgba(0, 123, 255, 0.4);
}

.btn-navigation i {
    margin-right: 8px;
}

/* CLOSING */
.closing-text {
    font-family: var(--font-body);
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-main);
    text-align: center;
    margin-bottom: var(--spacing-lg);
}

.closing-greeting {
    font-family: var(--font-body);
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--accent-green-dark);
    text-align: center;
    margin: var(--spacing-lg) 0;
}

.signature-label {
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--text-main);
    text-align: center;
    margin-bottom: var(--spacing-sm);
}

.signature-name {
    font-family: var(--font-script);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent-gold);
    text-align: center;
}

/* FLOATING MUSIC BUTTON */
.floating-controls {
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 1000;
}

.floating-btn {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: var(--accent-gold);
    color: white;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    box-shadow: var(--shadow-elevated);
    transition: var(--transition);
    display: flex;
    align-items: center;
    justify-content: center;
}

.floating-btn:hover {
    transform: scale(1.1);
    box-shadow: 0 8px 20px rgba(184, 134, 11, 0.4);
}

.music-icon.playing {
    animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {

    0%,
    100% {
        transform: scale(1);
    }

    50% {
        transform: scale(1.1);
    }
}

/* GENERAL ANIMATIONS */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes scaleIn {
    from {
        opacity: 0;
        transform: scale(0.95);
    }

    to {
        opacity: 1;
        transform: scale(1);
    }
}

/* RESPONSIVE */
@media (max-width: 768px) {
    html {
        font-size: 14px;
    }

    .section {
        padding: var(--spacing-xl) var(--spacing-md);
